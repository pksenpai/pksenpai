name: Play Music

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  workflow_dispatch:

jobs:
  play_music:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Play music
        uses: wei/gitalk@v2
        with:
          spotify_refresh_token: ${{ secrets.SPOTIFY_REFRESH_TOKEN }}
          github_token: ${{ secrets.GITHUB_TOKEN }}
